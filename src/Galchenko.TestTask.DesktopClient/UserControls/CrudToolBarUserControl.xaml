<UserControl x:Class="Galchenko.TestTask.DesktopClient.UserControls.CrudToolBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galchenko.TestTask.DesktopClient.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ToolBarPanel>
            <ToolBar>
                <Button Content="Add" ToolTip="Add patient"></Button>
                <Button Content="Edit" ToolTip="Add patient"></Button>
                <Button Content="Delete" ToolTip="Delete patient"></Button>
            </ToolBar>
        </ToolBarPanel>
    </Grid>
</UserControl>
