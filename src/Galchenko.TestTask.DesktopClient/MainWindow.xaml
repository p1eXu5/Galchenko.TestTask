<Window x:Class="Galchenko.TestTask.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Galchenko.TestTask.DesktopClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Column="0" Grid.Row="1">
                <StackPanel VerticalAlignment="Stretch" Orientation="Vertical">
                    <Button Content="Patients"></Button>
                    <Button Content="Appointments"></Button>
                </StackPanel>
            </Grid>
            <ToolBarPanel Grid.Column="1" Grid.Row="0">
                <ToolBar></ToolBar>
            </ToolBarPanel>
            <DataGrid Grid.Column="1" Grid.Row="1" x:Name="m_Table"></DataGrid>
        </Grid>
    </DockPanel>
</Window>
